<Window x:Class="ProyectoSegudoParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoSegudoParcial"
        mc:Ignorable="d"
        Title="MainWindow" Height="602.354" Width="780.83">
    <Grid>
        <TextBlock x:Name="txtProducto" HorizontalAlignment="Left" Margin="76,57,0,0" TextWrapping="Wrap" Text="Tipo de Producto" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbItems" HorizontalAlignment="Left" Margin="200,57,0,0" VerticalAlignment="Top" Width="418">
            <ComboBoxItem>Cafe</ComboBoxItem>
            <ComboBoxItem>Te</ComboBoxItem>
            <ComboBoxItem>Tonic</ComboBoxItem>
            <ComboBoxItem>Sundaes</ComboBoxItem>
            <ComboBoxItem>Reposteria</ComboBoxItem>
            <ComboBoxItem>Comida</ComboBoxItem>
        </ComboBox>
        
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="665,55,0,0" VerticalAlignment="Top" Width="75" Click="BtnAgregar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="563,518,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancelar_Click"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="665,518,0,0" VerticalAlignment="Top" Width="75" Click="BtnGuardar_Click"/>
        <Grid x:Name="gridInfo" HorizontalAlignment="Left" Height="398" Margin="28,99,0,0" VerticalAlignment="Top" Width="712"/>

    </Grid>
</Window>
